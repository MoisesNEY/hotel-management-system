    <!--
        Added the constraints for entity Booking.
    -->
    <changeSet id="20251211184754-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="room_type_id"
                                 baseTableName="booking"
                                 constraintName="fk_booking__room_type_id"
                                 referencedColumnNames="id"
                                 referencedTableName="room_type"
                                 />

